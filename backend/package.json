{
  "name": "cost-control-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run --coverage",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "type-check": "tsc --noEmit",
    "package": "npm run build && cd dist && zip -r ../lambda.zip .",
    "deploy": "npm run package && aws lambda update-function-code --function-name cost-control-api --zip-file fileb://lambda.zip"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.14.0",
    "@aws-lambda-powertools/tracer": "^2.14.0",
    "@aws-lambda-powertools/metrics": "^2.14.0",
    "@aws-sdk/client-secrets-manager": "^3.991.0",
    "@aws-sdk/client-s3": "^3.991.0",
    "pg": "^8.18.0",
    "zod": "^4.3.6",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/node": "^24.0.0",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.18.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  }
}
